<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamrocket.firstgen.MainPage"
    tools:showIn="@layout/app_bar_main_page"
    android:background="@color/main_page_background">

   <teamrocket.firstgen.HeightWrappingViewPager
       android:id="@+id/success_stories_view"
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:padding="-100dp" />

   <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/scholarships_list"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_below="@+id/success_stories_view"
       android:layout_marginTop="5dp"/>
</RelativeLayout>
